      <?dbhtml list-presentation="table"?>

      <varlistentry id="jbgtopbm">
        <term><command>jbgtopbm</command></term>
        <listitem>
          <para>
            is a JBIG1 to portable bitmap file converter.
          </para>
          <indexterm zone="jbigkit jbgtopbm">
            <primary sortas="b-jbgtopbm">jbgtopbm</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="pbmtojbg">
        <term><command>pbmtojbg</command></term>
        <listitem>
          <para>
            is a portable bitmap to JBIG1 file converter.
          </para>
          <indexterm zone="jbigkit pbmtojbg">
            <primary sortas="b-pbmtojbg">pbmtojbg</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="libjbig">
        <term><filename class="libraryfile">libjbig.so</filename></term>
        <listitem>
          <para>
            contains functions for compression and decompression of JBIG1 files.
          </para>
          <indexterm zone="jbigkit libjbig">
