    <bridgehead renderas="sect3">Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="cmake"/> and
      <xref linkend="gtk2"/>
    </para>

    <bridgehead renderas="sect4">Recommended</bridgehead>
