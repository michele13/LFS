<sect1 id="ch-system-which" role="wrap">
  <?dbhtml filename="which.html"?>

  <sect1info condition="script">
    <productname>which</productname>
    <productnumber>&which-version;</productnumber>
    <address>&which-url;</address>
  </sect1info>

  <title>which-&which-version;</title>

  <indexterm zone="ch-system-which">
    <primary sortas="a-which">which</primary>
  </indexterm>

  <sect2 role="package">
    <title/>

    <para>This package provides a command used to identify the location of
    executables.</para>

    <segmentedlist>
      <segtitle>&buildtime;</segtitle>
      <segtitle>&diskspace;</segtitle>

      <seglistitem>
        <seg>&which-ch6-sbu;</seg>
        <seg>&which-ch6-du;</seg>
      </seglistitem>
    </segmentedlist>

  </sect2>

  <sect2 role="installation">
    <title>Installation of which</title>

    <para>Prepare which for compilation:</para>

<screen><userinput remap="configure">./configure --prefix=/usr</userinput></screen>

    <para>Compile the package:</para>

<screen><userinput remap="make">make</userinput></screen>

    <para>Install the package:</para>

<screen><userinput remap="install">make install</userinput></screen>

  </sect2>

  <sect2 id="contents-which" role="content">
    <title>Contents of which</title>

    <segmentedlist>
      <segtitle>Installed program</segtitle>

      <seglistitem>
        <seg>which</seg>
      </seglistitem>
    </segmentedlist>

    <variablelist>
      <bridgehead renderas="sect3">Short Descriptions</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>

      <varlistentry id="which-prog">
        <term><command>which</command></term>
        <listitem>
          <para>Shows the full path of (shell) commands installed in your
          <envar>$PATH</envar>.</para>
          <indexterm zone="ch-system-which which-prog">
            <primary sortas="b-which">which</primary>
          </indexterm>
        </listitem>
      </varlistentry>

    </variablelist>

  </sect2>

</sect1>
